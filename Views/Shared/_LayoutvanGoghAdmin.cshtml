@{
    Layout = null;
}
<!--BU LAYOUT ADMİN İÇİNDİR-->

<!DOCTYPE html>
<html>
<head>

    <style>
        .navbar {
            background-color: #b6b6b8;
            opacity: 0.8;
            overflow: hidden;
        }

            .navbar a {
                float: left;
                display: block;
                color: #162b22;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
            }

                .navbar a:hover {
                    border-radius: 10px;
                    background-color: #295442;
                    color: white;
                }

            .navbar .logo {
                float: right;
                padding: 14px 16px;
            }

            .navbar .social-icons {
                float: right;
                padding: 14px 16px;
            }

        body {
            font-family: Arial, sans-serif;
            background-image: url('/Images/yesil.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            //display: flex;
            //justify-content: center;
            //align-items: center;
            //height: 100vh;
            margin: 0;
        }

        input[type="text"], input[type="password"], input[type="tel"] {
            width: 300px;
            padding: 10px;
            margin: 10px 0;
            border: none;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 5px;
            border-block-color: #4400FF;
        }

        button {
            background-color: #4400FF;
            color: white;
            border: none;
            padding: 10px 20px;
            margin-top: 10px;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #2200AA;
            }

        img {
            height: 22px;
            width: 22px;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1;
        }

        .modal-dialog {
            position: relative;
            max-width: 500px;
            margin: 0 auto;
            margin-top: 100px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 6px;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }

        .modal-content {
            padding: 20px;
        }

        .modal-header {
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
            text-align: center;
        }

        .modal-title {
            font-weight: bold;
        }

        .modal-body {
            padding: 20px;
            justify-content: center;
        }

        .modal-footer {
            border-top: 1px solid #ccc;
            padding: 10px 0;
            text-align: center;
        }

        .btn {
            padding: 10px 20px;
            margin: 5px;
            cursor: pointer;
            border: none;
            border-radius: 4px;
            font-weight: bold;
        }

        .container {
            justify-content: center;
            align-items: center;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th,
            .table td {
                border: 1px solid #ccc;
                padding: 8px;
                text-align: center;
            }

            .table th {
                background-color: #f0f0f0;
            }

        .btnn {
            display: inline-block;
            font-weight: 400;
            text-align: center;
            white-space: nowrap;
            vertical-align: middle;
            user-select: none;
            border: 1px solid transparent;
            padding: 0.375rem 0.75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: 0.25rem;
            transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

            .btnn:hover {
                text-decoration: none;
            }

            .btnn:focus, .btnn:active, .btnn.active {
                outline: 0;
                box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
            }
    </style>
</head>
<body>

    <div class="navbar">
        <a style="font-size:large; font-weight:bold;">KoüBlog Yazar</a>
        <a href="/Admin/Index" style="font-size:large;">Tüm Yazılar</a>
        <a href="/Admin/MyPosts" style="font-size:large;">Yazılarım</a>
        <a href="/Admin/NewPost" style="font-size:large;">Yazı Ekle</a>
        <a class="social-icons" asp-controller="Home" asp-action="Logout" title="Çıkış">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(255, 255, 255, 1);transform: ;msFilter:;"><path d="M19.002 3h-14c-1.103 0-2 .897-2 2v4h2V5h14v14h-14v-4h-2v4c0 1.103.897 2 2 2h14c1.103 0 2-.897 2-2V5c0-1.103-.898-2-2-2z"></path><path d="m11 16 5-4-5-4v3.001H3v2h8z"></path></svg>
        </a>
    </div>


    <div class="container">
        @RenderBody()
    </div>



</body>
</html>
